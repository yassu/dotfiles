[push]
    default = current
[core]
    excludesfile = ~/.gitignore
    editor = vim
    autocrlf = false
[color]
    ui = true
[alias]
  see = browse
  wdiff = diff --color-words --ignore-all-space
  sta = status
  com = commit
  coma = commit --amend
  bra = branch
  cout = checkout
  res = reset
  a = add
  d = diff
  glog = log --graph --oneline
  rem=remote

[difftool.latex]
    cmd = latexdiff -e utf-8 "$LOCAL" "$REMOTE"

[commit]
    template = ~/.gitmessage

[merge]
    ff = false

[pull]
    ff = only
