[include]
    path = ~/.gitconfig.user
[user]
    editor = vim
[push]
    default = current
[core]
    excludesfile = ~/.gitignore
    editor = nvim
    autocrlf = false
[color]
    ui = true
[alias]
  sta = status
  co = commit
  br = branch
  fbr = branch $(fzf)
  cout = checkout
  glog = log --graph --oneline
  rem=remote
[difftool.latex]
    cmd = latexdiff -e utf-8 "$LOCAL" "$REMOTE"

[commit]
    template = ~/.gitmessage

[merge]
    ff = false

[pull]
    ff = only
